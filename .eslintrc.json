{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "module": true,
      "jsx": true
    }
  },
  "rules": {
    "object-curly-spacing": [
      1,
      "always"
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ]
  }
}